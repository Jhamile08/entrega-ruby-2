<div class="min-h-screen flex bg-gray-100" style="align-items:center;">
  <div id="<%= dom_id event %>" class="p-6 bg-white shadow-lg rounded-lg border border-gray-300 mb-6 max-w-md w-full mx-auto">
    <div class="bg-indigo-500 text-white p-4 rounded-t-lg">
      <h2 class="text-xl font-bold">
        <%= event.eventName %>
      </h2>
    </div>

    <div class="p-4">
      <p class="text-gray-700 mb-2">
        <strong class="font-semibold text-gray-900">Exhibitor:</strong> <%= event.exhibitor %>
      </p>

      <p class="text-gray-700 mb-2">
        <strong class="font-semibold text-gray-900">Level:</strong> <%= event.level.capitalize %>
      </p>

      <p class="text-gray-700 mb-2">
        <strong class="font-semibold text-gray-900">Description:</strong> <%= event.descripcion %>
      </p>

      <p class="text-gray-700 mb-2">
        <strong class="font-semibold text-gray-900">Date:</strong> <%= event.date.strftime("%B %d, %Y") %>
      </p>
    </div>

 
  </div>
</div>
