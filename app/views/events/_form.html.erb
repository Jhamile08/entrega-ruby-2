<%= form_with(model: @event) do |form| %>
    
    <% if event.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
            <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
         <%= form.label :"Event name"  %>
         <%= form.text_field :eventName %>
    </div>

    <div>
         <%= form.label :exhibitor  %>
         <%= form.text_field :exhibitor %>
    </div>    


    <div>
         <%= form.label :"level(basic, middle, advanced)"  %>
         <%= form.text_field :level %>
    </div>

    <div>
         <%= form.label :description  %>
         <%= form.text_area :descripcion %>
    </div>    


    <div>
        <%= form.label :date %>
        <%= form.date_field :date %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>