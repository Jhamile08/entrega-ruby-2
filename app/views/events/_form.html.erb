<%= form_with(model: @event) do |form| %>
  
  <% if @event.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
      <h2 class="font-bold"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4" style="display: flex; flex-direction: column; width : 50%;">
    <%= form.label :eventName, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :eventName, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4" style="display: flex; flex-direction: column; width : 50%;">
    <%= form.label :exhibitor, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :exhibitor, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4" style="display: flex; flex-direction: column; width : 50%;">
    <%= form.label :level, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :level, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4" style="display: flex; flex-direction: column; width : 50%;">
    <%= form.label :descripcion, class: "block text-gray-700 font-semibold" %>
    <%= form.text_area :descripcion, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4" style="display: flex; flex-direction: column; width : 50%;">
    <%= form.label :date, class: "block text-gray-700 font-semibold" %>
    <%= form.date_field :date, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save Event", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

<% end %>
