<%= render @event %>

  <div class="mt-4">
<% if user_signed_in? && @event.user_id == current_user.id %>
  <%= link_to "Edit", edit_event_path(@event), class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-300 ease-in-out" %>
  <%= link_to "Delete", @event, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition duration-300 ease-in-out ml-2" %>
  <%= link_to "Back to events", events_path, class: "btn btn-secondary mt-2" %>

<% else %>
  <%= link_to "Back to events", view_events_path, class: "btn btn-secondary mt-2" %>
<% end %>

  </div>
</div>

