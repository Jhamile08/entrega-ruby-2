
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 max-w-md mx-auto bg-white p-6 shadow-md rounded-lg" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h2 class="text-2xl font-bold text-gray-800 mb-6" style="text-align: start; ">Sign up</h2>

  <div class="mb-4 flex" style="flex-direction: column; width: 61%;">
    <%= f.label :"email", class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "w-1/2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="field">
    <%= f.label :role %><br>
    <%= f.select :role, options_for_select(['user', 'moderator', 'admin']), prompt: "Select Role" %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="text-center flex" style=" margin : 10px; text-align: start; gap: 15px; align-items:center;">
    <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 transition duration-200"%>
    <%= link_to "View Events", view_events_path, class: "btn btn-primary" %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>


