<div class="flex items-center justify-center" style="justify-content: center;">
  <div class="w-full max-w-sm p-8 bg-white rounded-lg">
    <h2 class="text-2xl font-bold text-center mb-6" style="padding-top: 10px;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4" style="display: flex; flex-direction: column;">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4" style="display: flex; flex-direction: column;">
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center" style="gap: 5px; margin: 5px;">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700 font-semibold" %>
        </div>
      <% end %>

      <div class="mb-4", style=" margin : 10px; text-align: start; gap: 25px; align-items:center;">
        <%= f.submit "Log in", class: "w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition" %>
        <%= link_to "View Events", view_events_path, class: "btn btn-primary" %>
    <%= render "devise/shared/links" %>

      </div>
    <% end %>

  </div>
</div>
